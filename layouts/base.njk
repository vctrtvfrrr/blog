{%- set pageTitle = sitename -%}

{%- if collections[collection].metadata.title -%}
  {%- set pageTitle = collections[collection].metadata.title + ' &mdash; ' + pageTitle -%}
{%- endif -%}

{%- if title -%}
  {%- set pageTitle = title + ' &mdash; ' + pageTitle -%}
{%- endif -%}

{%- if excerpt -%}
  {%- set pageDescription = excerpt -%}
{%- elseif description -%}
  {%- set pageDescription = description -%}
{%- else -%}
  {%- set pageDescription = author -%}
{%- endif -%}

{%- if keywords -%}
  {%- set pageKeywords = keywords -%}
  {% if tags %}
    {%- set pageKeywords = pageKeywords + ', ' + tags -%}
  {% endif %}
{%- endif -%}
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<HTML>
	<HEAD>
		{% include 'partials/head.njk' %}
		{% block head %}{% endblock head %}
	</HEAD>
	<BODY onload="document.forms['eform'].subject.focus()">
		<table width="768" border="0" cellspacing="0" cellpadding="0">
			<tr>
				<td colspan="2" class="header">
					{% include 'partials/header.njk' %}
				</td>
			</tr>
			<tr>
				<td valign="top">
					{% block content %}
					{{ contents | safe }}
					{% endblock %}
				</td>
				<td width="220" valign="top" class="sidebar">
					{% include 'partials/sidebar.njk' %}
				</td>
			</tr>
			<tr>
				<td colspan="2">
					{% include 'partials/footer.njk' %}
				</td>
			</tr>
		</table>

