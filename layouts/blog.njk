{% extends "base.njk" %}

{% block content %}
{% if collections.blog.length %}
<UL>
	{% for item in collections.blog %}
	<LI>
		<H2><A HREF="/{{ item.permalink }}">{{ item.title }}</A></H2>
		<P><I><FONT SIZE="2">{{ item.pubdate }}</FONT></I></P>
		<P>{{ item.excerpt }}</P>
	</LI>
	{% endfor %}
</UL>
{% else %}
Nenhum post encontrado
{% endif %}
{% endblock content %}
