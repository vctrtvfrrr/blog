{
  "name": "@vctrtvfrrr/blog",
  "module": "metalsmith.js",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_ENV=production bun run metalsmith.js",
    "start": "cross-env NODE_ENV=development bun run metalsmith.js",
    "dev": "nodemon --watch src --watch layouts --watch metalsmith.js --ext html,js,njk --exec bun run build",
    "serve": "browser-sync start --server build --no-open"
  },
  "devDependencies": {
    "@metalsmith/collections": "^1.3.0",
    "@metalsmith/layouts": "^2.7.0",
    "@metalsmith/permalinks": "^3.1.0",
    "@types/bun": "latest",
    "browser-sync": "^3.0.3",
    "cheerio": "^1.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "jstransformer-nunjucks": "^1.2.0",
    "metalsmith": "^2.6.3",
    "metalsmith-html-minifier": "^4.0.1",
    "nodemon": "^3.1.7"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}